<!DOCTYPE html>
<html>
    <head>
        <%- include('partials/head', { title: 'Home Page' }) %>
    </head>
<body>
    <%- include('partials/nav') %>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">New Player Form</h1>
        
        <form action="/players" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Player Name:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>

            <div class="mb-3">
                <label for="countryName" class="form-label">Country Name:</label>
                <input type="text" class="form-control" id="countryName" name="countryName">
            </div>

            <div class="mb-3">
                <label for="trophies" class="form-label">Trophies:</label>
                <input type="number" class="form-control" id="trophies" name="trophies">
            </div>

            <div class="mb-3">
                <label for="age" class="form-label">Age:</label>
                <input type="number" class="form-control" id="age" name="age">
            </div>

            <div class="mb-3">
                <label for="active" class="form-label">Active:</label>
                <select id="active" name="active" class="form-control">
                    <option value="true" selected>True</option>
                    <option value="false">False</option>
                </select>
            </div>
            <input type="hidden" name="teamId" value="<%= teamId %>">

            <button type="submit" class="btn btn-primary">Add Player</button>
        </form>
    </div>

    <%- include('partials/footer') %>
</body>