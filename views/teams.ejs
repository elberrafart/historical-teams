<!DOCTYPE html>
<html>
    <head>
        <%- include('partials/head', { title: 'Home Page' }) %>
    </head>
<body>
    <%- include('partials/nav') %>
    <h1 class="text-center">Teams</h1>

    <div class="container">
        <div class="row">
            <% teams.forEach(team => { %>
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card mb-4">
                        <img src="<%= team.teamLogo %>" class="card-img-top" alt="<%= team.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= team.teamName %></h5>
                            <p class="card-text"><%= team.nickName %></p>
                            <a href="/teams/<%= team._id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
